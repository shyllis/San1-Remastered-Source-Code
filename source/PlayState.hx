			mashViolations--;

		if (mashViolations < 0)
			mashViolations = 0;

		if (!note.wasGoodHit) {
			if (!note.isSustainNote) {
				popUpScore(note);
				combo += 1;
			} else
				totalNotesHit += 1;

			switch (note.noteData) {
